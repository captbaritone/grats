                    },
                    resolve(source, args, context) {
                        return source.greeting(context, args.greeting);
                    }
                },
                name: {
                    name: "name",
                    type: GraphQLString
                }
            };
        }
    });
    return new GraphQLSchema({
        types: [UserType]
