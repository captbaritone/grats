import { GraphQLSchema, GraphQLObjectType, GraphQLString, GraphQLInt, GraphQLBoolean } from "graphql";
export function getSchema(): GraphQLSchema {
    const PostType: GraphQLObjectType = new GraphQLObjectType({
        name: "Post",
        fields() {
            return {
                body: {
                    name: "body",
                    type: GraphQLString
                },
                id: {
                    name: "id",
                    type: GraphQLInt
                },
                published: {
                    name: "published",
                    type: GraphQLBoolean
                },
                title: {
                    name: "title",
                    type: GraphQLString
                }
            };
        }
    });
    return new GraphQLSchema({
        types: [PostType]
    });
}
